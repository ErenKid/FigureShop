@model FigureShop.Models.ApplicationUser


@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}



<div class="container py-5">
    <h2 class="fw-bold mb-4 text-primary"><i class="bi bi-pencil-square me-2"></i> Cập nhật thông tin người dùng</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="bg-white p-4 rounded-4 shadow-lg">
        <input type="hidden" asp-for="Id" />
        <div class="row align-items-center mb-4">
            <div class="col-auto">
                <img src="@(Model.AvatarPath ?? "/images/default-avatar.jpg")" class="rounded-circle shadow" width="120" height="120" style="object-fit:cover; border:4px solid #fbc2eb;">
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label fw-bold">Ảnh đại diện</label>
                    <input type="file" name="Avatar" class="form-control" accept="image/*" />
                </div>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <label asp-for="UserName" class="form-label fw-bold">Tên đăng nhập</label>
                <input asp-for="UserName" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="FullName" class="form-label fw-bold">Họ tên</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="col-12">
                <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
            </div>
        </div>
        <div class="d-flex justify-content-end gap-3 mt-4">
            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <a href="@Url.Action("ChangePassword", "User", new { id = Model.Id })" class="btn btn-warning rounded-pill px-4">
                <i class="bi bi-key"></i> Đổi mật khẩu
            </a>
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-save"></i> Lưu thay đổi
            </button>
        </div>



    </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
