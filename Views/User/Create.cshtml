
@model FigureShop.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Thêm người dùng";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4 text-primary fw-bold">
                        <i class="bi bi-person-plus me-2"></i>Thêm người dùng mới
                    </h3>
                    <form asp-action="Create" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold"><i class="bi bi-person-circle me-1"></i> Tên đăng nhập</label>
                            <input asp-for="UserName" class="form-control rounded-pill" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"><i class="bi bi-envelope me-1"></i> Email</label>
                            <input asp-for="Email" class="form-control rounded-pill" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold"><i class="bi bi-card-text me-1"></i> Họ tên</label>
                            <input asp-for="FullName" class="form-control rounded-pill" placeholder="Nhập họ tên" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold"><i class="bi bi-geo-alt me-1"></i> Địa chỉ</label>
                            <input asp-for="Address" class="form-control rounded-pill" placeholder="Nhập địa chỉ" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold"><i class="bi bi-telephone me-1"></i> Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control rounded-pill" placeholder="Nhập số điện thoại" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"><i class="bi bi-key me-1"></i> Mật khẩu</label>
                            <input asp-for="Password" class="form-control rounded-pill" type="password" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold py-2">
                            <i class="bi bi-person-plus"></i> Tạo người dùng
                        </button>
                        <a href="@Url.Action("Index", "User")" class="btn btn-secondary w-100 mt-2 rounded-pill">Quay lại danh sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
