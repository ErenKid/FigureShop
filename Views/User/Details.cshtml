
@model FigureShop.Models.ApplicationUser


<div class="container py-5">
    <h2 class="fw-bold mb-4 text-primary"><i class="bi bi-person-circle me-2"></i> Thông tin người dùng</h2>
    <div class="bg-white p-4 rounded-4 shadow-lg">
        <div class="row align-items-center mb-4">
            <div class="col-auto">
                <img src="@(Model.AvatarPath ?? "/images/default-avatar.jpg")" class="rounded-circle shadow" width="120" height="120" style="object-fit:cover; border:4px solid #fbc2eb;">
            </div>
            <div class="col">
                <h3 class="fw-bold mb-1 text-primary">@Model.UserName</h3>
                <span class="badge bg-info text-dark mb-2 px-3 py-2" style="font-size:1rem;">@Model.Email</span>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="mb-2">
                    <i class="bi bi-person me-2 text-secondary"></i> <b>Họ tên:</b> <span class="text-dark">@Model.FullName</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-2">
                    <i class="bi bi-geo-alt me-2 text-secondary"></i> <b>Địa chỉ:</b> <span class="text-dark">@Model.Address</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-2">
                    <i class="bi bi-telephone me-2 text-secondary"></i> <b>SĐT:</b> <span class="text-dark">@Model.PhoneNumber</span>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-3 mt-4">
            <a class="btn btn-warning rounded-pill px-4" href="@Url.Action("Edit", new { id = Model.Id })">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a class="btn btn-secondary rounded-pill px-4" href="@Url.Action("Index")">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
