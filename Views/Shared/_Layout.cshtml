                                        <button type="submit" class="btn btn-link text-danger p-0">🚪 Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

    <main role="main" class="flex-fill" style="flex: 1 0 auto;">
        @RenderBody()
        @await Html.PartialAsync("_LiveChatPartial")
        <script>
            $(document).ready(function () {
                // Notification bell
                var bell = document.getElementById('notificationBell');
                var popup = document.getElementById('notificationPopup');
                if (bell && popup) {
                    bell.addEventListener('click', function(e) {
                        e.preventDefault();
                        popup.style.display = (popup.style.display === 'none') ? 'block' : 'none';
                    });
                }
                // Product search suggest
                let timer;
                $('#navbar-search-box').on('input', function () {
                    clearTimeout(timer);
                    const term = $(this).val();
                    if (term.length < 2) {
                        $('#navbar-suggestions').hide().html('');
                        return;
                    }
                    timer = setTimeout(function () {
                        $.ajax({
                            url: '/Product/Search',
                            type: 'GET',
                            data: { term: term },
                            success: function (data) {
            if (!data || data.length === 0) {
                $('#navbar-suggestions').hide().html('');
                return;
            }
            let list = '';
            data.forEach(item => {
            list += `<li class="list-group-item list-group-item-action py-3 px-4 d-grid gap-3 suggest-item" data-id="${item.id}" style="cursor:pointer; border:none; border-bottom:1px solid #f0f0f0; transition:background 0.2s; grid-template-columns:72px 1fr; align-items:center;">
                <img src="${item.imagePath || '/images/no-image.png'}" alt="${item.name}" style="width:72px; height:72px; object-fit:cover; border-radius:14px; background:#f7f7f7; border:1px solid #eee; box-shadow:0 2px 12px rgba(0,0,0,0.06);">
                <div class="flex-grow-1 text-start d-flex flex-column justify-content-center" style="min-width:0;">
                    <div class="fw-bold text-dark mb-1" style="font-size:1.18rem; line-height:1.35; word-break:break-word;">${item.name}</div>
                    <div class="mt-2">
                        <span class="fw-bold text-danger" style="font-size:1.28rem; letter-spacing:0.5px;">${item.price.toLocaleString('vi-VN')}₫</span>
                    </div>
                </div>
            </li>`;
            });
            $('#navbar-suggestions').html(list).show();
            // Thêm hiệu ứng hover cho suggest-item
            $('#navbar-suggestions .suggest-item').hover(
                function() { $(this).css('background','#f7fafd'); },
                function() { $(this).css('background','#fff'); }
            );
                            }
                        });
                    }, 300);
                });
                // Click on suggestion
                $('#navbar-suggestions').on('click', 'li', function () {
                    const id = $(this).data('id');
                    if (id) {
                        window.location.href = '/Product/Details/' + id;
                    }
                });
                // Hide suggest when click outside
                $(document).on('click', function (e) {
                    if (!$('#navbar-search-box').is(e.target) && !$('#navbar-suggestions').is(e.target) && $('#navbar-suggestions').has(e.target).length === 0) {
                        $('#navbar-suggestions').hide().html('');
                    }
                });
            });
        </script>
    </main>



