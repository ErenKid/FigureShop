                                    @if (ViewBag.NotificationList != null && ((List<string>)ViewBag.NotificationList).Count > 0)
                                    {
                                        int idx = 0;
                                        foreach (var n in (List<string>)ViewBag.NotificationList)
                                        {
                                            var notificationId = ViewBag.NotificationIds != null ? ((List<int>)ViewBag.NotificationIds)[idx] : idx;
                                            var notificationOrderIds = ViewBag.NotificationOrderIds != null ? (List<int?>)ViewBag.NotificationOrderIds : new List<int?>();
                                            var orderId = notificationOrderIds.Count > idx ? notificationOrderIds[idx] : null;
                                            <li id="notification-item-@notificationId" class="d-flex align-items-center justify-content-between gap-2 mb-2 px-2 py-2" style="background:#f7fafd; border-radius:8px; border:1px solid #e3e8ee; box-shadow:0 1px 4px rgba(0,0,0,0.04);">
                                                <div style="display:flex;align-items:center;width:100%;">
                                                    @if (orderId != null)
                                                    {
                                                        <a href="/Order/OrderHistory" style="flex:1; color:#333; text-decoration:none; padding:8px 0; display:block; cursor:pointer; border-radius:6px; transition:background 0.2s; z-index:2; position:relative;">@n</a>
                                                    }
                                                    else
                                                    {
                                                        <span style="flex:1; color:#333;">@n</span>
                                                    }
