@model FigureShop.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container py-4">
    <h2 class="mb-4">Chỉnh sửa sản phẩm</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <!-- THÔNG TIN CHUNG -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                Thông tin sản phẩm
            </div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Price" class="form-label">Giá gốc</label>
                    <input asp-for="Price" class="form-control" required />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="DiscountPrice" class="form-label">Giá khuyến mãi</label>
                    <input asp-for="DiscountPrice" class="form-control" />
                    <span asp-validation-for="DiscountPrice" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label">Danh mục</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId" required>
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Stock" class="form-label">Tồn kho</label>
                    <input asp-for="Stock" class="form-control" required />
                    <span asp-validation-for="Stock" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <!-- FLASH SALE -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <div><i class="bi bi-lightning-fill"></i> Flash Sale</div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="toggleFlash" name="FlashSale.Cancel" value="true">
                    <label class="form-check-label text-white" for="toggleFlash">Hủy Flash Sale</label>
                </div>
            </div>
            <div class="card-body row g-3">
                <div class="col-md-4">
                    <label class="form-label">Giảm giá (%)</label>
                    <input name="FlashSale.Discount" class="form-control" type="number" step="0.01" min="0.01" max="1"
                        value="@(Model.FlashSale?.Discount.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "")" />
                    <small class="text-muted">Ví dụ: nhập 0.2 nếu muốn giảm 20%</small>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Thời gian bắt đầu</label>
                    <input name="FlashSale.StartTime" class="form-control" type="datetime-local"
                        value="@(Model.FlashSale?.StartTime.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Thời gian kết thúc</label>
                    <input name="FlashSale.EndTime" class="form-control" type="datetime-local"
                        value="@(Model.FlashSale?.EndTime.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
                </div>
            </div>
        </div>

        <!-- ẢNH SẢN PHẨM -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-info text-white">
                Ảnh sản phẩm
            </div>
            <div class="card-body row g-3">
                <div class="col-md-4">
                    <label asp-for="ImagePath" class="form-label">Ảnh chính</label>
                    <input asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ImagePath2" class="form-label">Ảnh phụ 2</label>
                    <input asp-for="ImagePath2" class="form-control" />
                    <span asp-validation-for="ImagePath2" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ImagePath3" class="form-label">Ảnh phụ 3</label>
                    <input asp-for="ImagePath3" class="form-control" />
                    <span asp-validation-for="ImagePath3" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <!-- NÚT HÀNH ĐỘNG -->
        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
