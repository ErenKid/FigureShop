@model IEnumerable<FigureShop.Models.Category>




<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4 text-primary fw-bold" style="margin-top:32px;">
                        <i class="bi bi-tags me-2"></i> Quản lý danh mục
                    </h2>
                    <div class="d-flex justify-content-end mb-3">
                        <a href="@Url.Action("Create")" class="btn btn-success rounded-pill px-4 fw-bold">
                            <i class="bi bi-plus-circle"></i> Tạo danh mục mới
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col"><i class="bi bi-tag"></i> Tên danh mục</th>
                                    <th scope="col"><i class="bi bi-card-text"></i> Mô tả</th>
                                    <th scope="col" class="text-center"><i class="bi bi-gear"></i> Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.Name</td>
                                        <td>@item.Description</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm rounded-pill mx-1">
                                                <i class="bi bi-eye"></i> Chi tiết
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm rounded-pill mx-1">
                                                <i class="bi bi-pencil-square"></i> Sửa
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm rounded-pill mx-1" onclick="return confirm('Bạn chắc chắn muốn xóa danh mục này?');">
                                                <i class="bi bi-trash"></i> Xoá
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>