@model FigureShop.Models.LoginViewModel

<!-- Custom CSS cho login form đẹp như mẫu, chỉ áp dụng cho login-page-bg -->
<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    .login-page-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        min-height: 100vh;
        min-width: 100vw;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: url('/images/backgroundlogin.jpg') no-repeat center center fixed;
        background-size: cover;
    }
    .login-container {
        position: relative;
        z-index: 2;
        background: rgba(255,255,255,0.13);
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37), 0 0 0 4px rgba(255,152,0,0.3);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-radius: 20px;
        border: 3px solid #ff9800;
        padding: 40px 32px 24px 32px;
        max-width: 350px;
        width: 100%;
        margin: 40px auto;
    }
    .login-title {
        font-weight: bold;
        color: #fff;
        text-align: center;
        margin-bottom: 32px;
        font-size: 2rem;
    }
    .input-group-text {
        background: transparent;
        border: none;
        color: #fff;
    }
    .form-control {
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.3);
        color: #fff;
        border-radius: 30px;
        padding-left: 40px;
        box-sizing: border-box;
    }
    .form-control::placeholder {
        color: #eee;
        opacity: 1;
    }
    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }
    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
        z-index: 2;
        pointer-events: none;
        height: 20px;
        width: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .btn-login {
        width: 100%;
        border-radius: 30px;
        font-weight: bold;
        padding: 10px 0;
        font-size: 1.1rem;
        background: #fff;
        color: #222;
        border: none;
        margin-bottom: 10px;
        transition: background 0.2s, color 0.2s;
    }
    .btn-login:hover {
        background: #007bff;
        color: #fff;
    }
    .login-links {
        text-align: center;
        color: #fff;
        margin-top: 10px;
    }
    .login-links a {
        color: #fff;
        text-decoration: underline;
        margin: 0 4px;
    }
    .form-check-label, .form-check-input {
        color: #fff;
    }
    .text-danger {
        color: #ffb3b3 !important;
        margin-left: 5px;
        font-size: 0.95em;
        display: block;
        padding-left: 40px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .input-error {
        border-color: #ff4d4f !important;
        color: #ff4d4f;
    }
    .input-error::placeholder {
        color: #ff4d4f !important;
        opacity: 1;
    }
    /* Ẩn phần tử validate khỏi giao diện nhưng vẫn cho JS truy cập */
    [data-valmsg-for] {
        position: absolute;
        left: -9999px;
        top: auto;
        width: 1px;
        height: 1px;
        overflow: hidden;
        opacity: 0;
    }
</style>

<div class="login-page-bg">
    <div class="login-container">
        <div class="login-logo text-center mb-3">
            <img src="/images/logo.png" alt="Figure Shop Logo" style="max-width: 100px; filter: drop-shadow(0 2px 8px rgba(0,0,0,0.4));">
        </div>
        <div class="login-title">Login</div>

        <!-- ✅ THÊM: Hiển thị thông báo sau khi đăng ký -->
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="alert alert-success text-center shadow-sm" role="alert" style="font-size: 0.95rem;">
                @TempData["RegisterSuccess"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid || ViewData.ModelState[""]?.Errors.Count > 0)
        {
            <div class="alert alert-danger text-center shadow-sm" role="alert" style="font-size: 0.95rem;">
                @foreach (var error in ViewData.ModelState[""]?.Errors)
                {
                    @error.ErrorMessage <br />
                }
            </div>
        }
        <form asp-action="Login" method="post">
            <div class="form-group">
                <div class="input-wrapper" style="position:relative;">
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    <span class="input-icon"><i class="fa fa-user"></i></span>
                    <input asp-for="UserNameOrEmail" class="form-control" placeholder="Tên đăng nhập hoặc Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="input-wrapper" style="position:relative;">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="input-icon"><i class="fa fa-lock"></i></span>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                </div>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between">
                <div class="form-check mb-0">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <a asp-action="ForgotPassword" asp-controller="Account" class="small text-white text-decoration-underline">Forgot Password?</a>     
            </div>

            <button type="submit" class="btn btn-login">Submit</button>

            <div class="login-links">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </form>
    </div>
</div>

<!-- FontAwesome CDN cho icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<script>
    document.addEventListener('DOMContentLoaded', function () {
        function updateInputValidation(inputName, defaultPlaceholder) {
            var input = document.querySelector('input[name="' + inputName + '"]');
            var error = document.querySelector('[data-valmsg-for="' + inputName + '"]');
            if (input && error && error.textContent.trim() !== "") {
                input.placeholder = error.textContent.trim();
                input.style.borderColor = '#ff4d4f';
                input.classList.add('input-error');
            } else if (input) {
                input.placeholder = defaultPlaceholder;
                input.style.borderColor = '';
                input.classList.remove('input-error');
            }
        }

        updateInputValidation('UserNameOrEmail', 'Tên đăng nhập hoặc Email');
        updateInputValidation('Password', 'Password');

        document.querySelectorAll('input[name="UserNameOrEmail"], input[name="Password"]').forEach(function (input) {
            input.addEventListener('input', function () {
                setTimeout(function () {
                    updateInputValidation('UserNameOrEmail', 'Tên đăng nhập hoặc Email');
                    updateInputValidation('Password', 'Password');
                }, 100);
            });
        });
    });
</script>
