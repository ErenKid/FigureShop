@{
    ViewData["Title"] = "Đặt lại mật khẩu thành công";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex justify-content-center align-items-center" style="height: 100vh; background-color: #f0f2f5;">
    <div class="text-center shadow p-5 bg-white rounded" style="max-width: 480px;">
        <img src="/images/logo.png" alt="Figure Shop" style="width: 80px;" class="mb-3" />
        <h4 class="text-success">🎉 Mật khẩu đã được đặt lại!</h4>
        <p class="text-muted">Bạn có thể đăng nhập ngay với mật khẩu mới.</p>
        <a class="btn btn-primary mt-3" asp-controller="Account" asp-action="Login">Quay lại đăng nhập</a>
    </div>
</body>
</html>
