@{
    ViewData["Title"] = "Xác nhận email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f0f2f5;">
    <div class="text-center p-4 bg-white shadow rounded" style="max-width: 500px;">
        <img src="/images/logo.png" alt="Figure Shop" style="width: 80px; margin-bottom: 16px;" />
        <h4 class="text-success">✅ Xác nhận email thành công!</h4>
        <p>Bạn có thể đăng nhập ngay bây giờ.</p>
        <a class="btn btn-primary mt-3" asp-controller="Account" asp-action="Login">Đi đến đăng nhập</a>
    </div>
</body>
</html>
