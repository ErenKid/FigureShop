@model FigureShop.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng ký tài khoản - FigureShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        /* Giữ nguyên CSS của bạn */
        html, body {
            height: 100%;
            background: url('/images/backgroundregister.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .register-container {
            position: relative;
            z-index: 2;
            background: rgba(255,255,255,0.13);
            box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37), 0 0 0 4px rgba(255,152,0,0.3);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border-radius: 20px;
            border: 3px solid #ff9800;
            padding: 40px 32px 24px 32px;
            max-width: 350px;
            width: 100%;
            margin: 40px auto;
            color: #fff;
        }

        .register-title {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 24px;
        }

        .form-control {
            background: rgba(255,255,255,0.15);
            border: 1px solid rgba(255,255,255,0.3);
            color: #fff;
            border-radius: 30px;
            padding-left: 40px;
        }

        .form-control::placeholder {
            color: #ddd;
        }

        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #ccc;
        }

        .btn-register {
            width: 100%;
            border-radius: 30px;
            font-weight: bold;
            padding: 10px 0;
            font-size: 1.1rem;
            background: #fff;
            color: #222;
            border: none;
        }

        .register-links {
            text-align: center;
            color: #fff;
            margin-top: 10px;
        }

        .text-danger {
            color: #ffb3b3 !important;
            padding-left: 40px;
            display: block;
        }

        .form-warning {
            background: rgba(255, 0, 0, 0.25);
            padding: 8px 16px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 12px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="text-center mb-3">
            <img src="/images/logo.png" alt="FigureShop Logo" style="max-width: 100px;" />
        </div>
        <div class="register-title">Đăng ký tài khoản</div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="form-warning text-white">
                ⚠ Mật khẩu sẽ bị xoá vì lý do bảo mật nếu có lỗi. Vui lòng nhập lại mật khẩu.
            </div>
        }

        <form asp-action="Register" method="post">
            <div class="form-group">
                <span class="input-icon"><i class="fa fa-user"></i></span>
                <input asp-for="UserName" class="form-control" placeholder="Tên đăng nhập" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="input-icon"><i class="fa fa-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="input-icon"><i class="fa fa-id-card"></i></span>
                <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="input-icon"><i class="fa fa-map-marker-alt"></i></span>
                <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="input-icon"><i class="fa fa-phone"></i></span>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="input-icon"><i class="fa fa-lock"></i></span>
                <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="input-icon"><i class="fa fa-lock"></i></span>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-register">Đăng ký</button>

            <div class="register-links">
                Đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
            </div>
        </form>

        @* ✅ Đặt block lỗi ngoài form luôn an toàn hơn *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger text-center mt-3" style="color: white; background: #d9534f; border-radius: 10px;">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
