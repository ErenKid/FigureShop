@model FigureShop.ViewModels.ForgotPasswordViewModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: #f8f9fa;">
    <div class="p-4 bg-white rounded shadow" style="max-width: 400px; width:100%;">
        <div class="text-center mb-3">
            <span style="font-size:2.2rem; color:#ff512f;">
                <i class="bi bi-key"></i>
            </span>
            <h3 class="fw-bold mt-2 mb-1" style="color:#ff512f;">Quên mật khẩu</h3>
            <div class="text-muted mb-2" style="font-size:1rem;">Nhập email đăng ký để nhận liên kết đặt lại mật khẩu.</div>
        </div>
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning w-100 fw-bold py-2" style="border-radius:12px; font-size:1.1rem;">Gửi liên kết đặt lại mật khẩu</button>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none text-secondary">&larr; Quay lại đăng nhập</a>
        </div>
    </div>
</div>
