@model FigureShop.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}


<style>
    .change-password-bg {
        min-height: 100vh;
        background: url('/images/backgroundlogin.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .change-password-card {
        background: rgba(255,255,255,0.13);
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37), 0 0 0 4px rgba(255,152,0,0.3);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border-radius: 20px;
        border: 3px solid #ff9800;
        padding: 40px 32px 24px 32px;
        max-width: 350px;
        width: 100%;
        color: #222;
    }
    .change-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 18px;
        color: #ff512f;
    }
    .btn-change {
        width: 100%;
        border-radius: 30px;
        font-weight: bold;
        padding: 10px 0;
        font-size: 1.1rem;
        background: linear-gradient(90deg,#ff512f,#dd2476);
        color: #fff;
        border: none;
        margin-bottom: 10px;
        transition: background 0.2s, color 0.2s;
    }
    .btn-change:hover {
        background: #d9534f;
        color: #fff;
    }
</style>

<div class="change-password-bg">
    <div class="change-password-card">
        <div class="text-center mb-3">
            <img src="/images/logo.png" alt="FigureShop Logo" style="max-width: 100px; filter: drop-shadow(0 2px 8px rgba(0,0,0,0.4));">
        </div>
        <div class="change-title">Đổi mật khẩu</div>
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Success</div>
        }
        <form asp-action="ChangePassword" method="post">
            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label fw-bold">Mật khẩu hiện tại</label>
                <input asp-for="OldPassword" class="form-control" type="password" autocomplete="current-password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-bold">Mật khẩu mới</label>
                <input asp-for="NewPassword" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu mới</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-change">Đổi mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
